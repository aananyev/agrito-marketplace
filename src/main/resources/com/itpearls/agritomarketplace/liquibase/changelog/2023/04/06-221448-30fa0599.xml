<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="agrito-marketplace">
        <dropColumn columnName="COUNTERPARTY_ID" tableName="COUNTERPARTY_RATING"/>
    </changeSet>
    <changeSet id="2" author="agrito-marketplace">
        <dropColumn columnName="COUNTERPARTY_RATING_ID" tableName="COUNTERPARTY"/>
    </changeSet>
    <changeSet id="3" author="agrito-marketplace">
        <addNotNullConstraint columnDataType="INT" columnName="RATING" tableName="COUNTERPARTY_RATING" validate="true"/>
    </changeSet>
    <changeSet id="4" author="agrito-marketplace">
        <addNotNullConstraint columnDataType="UUID" columnName="USER_ID" tableName="COUNTERPARTY_RATING"
                              validate="true"/>
    </changeSet>
</databaseChangeLog>